{
  "name": "sachets",
  "packageManager": "yarn@3.2.0",
  "engines": {
    "node": ">=16.10.0",
    "yarn": ">=3.0.0",
    "npm": "please-use-yarn"
  },
  "workspaces": [
    "modules/*",
    "packages/*",
    "state/*",
    "tests/*",
    "stories/*"
  ],
  "scripts": {
    "format": "prettier --write",
    "hooks": "git config core.hookspath .githooks"
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.15.0",
    "fixjson": "^1.1.2",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.json": [
      "fixjson --write"
    ],
    "*.md": [
      "yarn format"
    ],
    "*.{js,ts,tsx,jsx}": [
      "yarn format",
      "eslint --fix"
    ]
  }
}
